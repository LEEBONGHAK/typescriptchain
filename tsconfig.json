// typescript에게 어떻게 javascript로 변환하는 지 알려주면서 몇몇 옵션을 주는 것
{
  "compilerOptions": {
    "module": "commonjs", // node.js를 평범하게 사용하고 다양한 것을 import하거나 export할 수 있게 만드는 것
    "target": "ES2015",  // 어떤 버전의 javascript로 컴파일 되고 싶은지
    "sourceMap": true,  // sourcemap 처리를 하고 싶은지
  },
  // 어떤 파일들이 컴파일 과정에 포함되는 지 typescript에게 알려주는 것
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}